<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/miniatura_foto_inicio"
        android:layout_width="match_parent"
        android:layout_height="@dimen/altura_miniatura_comida"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/titulo_foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:paddingLeft="@dimen/espacio_norma_1"
        android:text="Large Text"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="italic"
        android:layout_alignBottom="@+id/miniatura_foto_inicio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp"/>


    <TextView
        android:id="@+id/fecha_foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:text="Medium Text"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@android:color/white"
        android:layout_alignBottom="@+id/miniatura_foto_inicio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:id="@+id/imageViewSeparator"
        android:layout_width="match_parent"
        android:layout_below="@+id/fecha_foto"
        android:layout_height="wrap_content"
        android:src="@android:drawable/divider_horizontal_dim_dark"
        android:scaleType="fitXY"/>

</RelativeLayout>
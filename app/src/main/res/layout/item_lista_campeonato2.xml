<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:background="?attr/selectableItemBackground"
    android:layout_margin="8dp"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/img_fernando_rama" />

    <TextView
        android:id="@+id/camp2_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_avatar"
        android:text="Nombre"
        android:textAppearance="?attr/textAppearanceListItem"/>

    <TextView
        android:id="@+id/camp2_pos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_below="@+id/tv_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:text="PosiciÃ³n: 1"/>

    <TextView
        android:id="@+id/camp2_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100 Puntos"
        android:layout_alignBottom="@+id/iv_avatar"
        android:layout_alignLeft="@+id/camp2_nombre"
        android:layout_alignStart="@+id/camp2_nombre" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:background="@color/primaryColor"
        android:layout_below="@id/camp2_total"/>
</RelativeLayout>
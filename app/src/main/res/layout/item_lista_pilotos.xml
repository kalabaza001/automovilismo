<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/miniatura_pilotos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/numero_pilotos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_below="@id/miniatura_pilotos"
        android:paddingLeft="@dimen/espacio_norma_1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="10"
        android:textStyle="bold"
        android:textSize="36sp"
        android:textColor="#0B6138"
        android:shadowColor="#0B3B2E"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="1.8" />


    <TextView
        android:id="@+id/marca_auto_pilotos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:paddingLeft="@dimen/espacio_norma_1"

        android:text="Peugeot"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@android:color/black"
        android:layout_below="@+id/numero_pilotos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="10dp"/>

    <TextView
        android:id="@+id/nombre_pilotos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/espacio_norma_1"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Andre Lafon"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/numero_pilotos"
        android:layout_alignBottom="@+id/numero_pilotos"
        android:layout_toRightOf="@+id/numero_pilotos"
        android:layout_toEndOf="@+id/numero_pilotos" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/marca_auto_pilotos"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0"
            android:paddingBottom="5dp"
            android:id="@+id/view3" />

    </android.support.v7.widget.LinearLayoutCompat>


</RelativeLayout>
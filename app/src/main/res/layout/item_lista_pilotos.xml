<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/miniatura_pilotos"
        android:layout_width="match_parent"
        android:layout_height="@dimen/altura_miniatura_pilotos"
        android:scaleType="centerCrop" />


    <TextView
        android:id="@+id/numero_pilotos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:textStyle="bold"
        android:textSize="36sp"
        android:textColor="#0B6138"
        android:shadowColor="#0B3B2E"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="1.8" />


    <TextView
        android:id="@+id/nombre_pilotos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:paddingBottom="20dp"
        android:paddingLeft="16dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/marca_auto_pilotos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@android:color/black"
        />



</LinearLayout>